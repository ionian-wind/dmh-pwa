{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Encounter",
  "type": "object",
  "required": [
    "id", "name", "difficulty", "monsters", "currentRound",
    "currentTurn", "moduleId", "createdAt", "updatedAt"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the encounter"
    },
    "name": {
      "type": "string",
      "description": "Name of the encounter"
    },
    "description": {
      "type": "string",
      "description": "Description of the encounter"
    },
    "difficulty": {
      "type": "string",
      "enum": ["easy", "medium", "hard", "deadly"],
      "description": "Difficulty level of the encounter"
    },
    "level": {
      "type": "number",
      "minimum": 1,
      "maximum": 20,
      "description": "Level of the encounter"
    },
    "xp": {
      "type": "number",
      "minimum": 0,
      "description": "Experience points for the encounter"
    },
    "monsters": {
      "type": "object",
      "additionalProperties": {
        "type": "number",
        "minimum": 1,
        "maximum": 20
      },
      "description": "Object mapping monster IDs to their counts in this encounter"
    },
    "currentRound": {
      "type": "number",
      "minimum": 0,
      "description": "Current round number"
    },
    "currentTurn": {
      "type": "number",
      "minimum": 0,
      "description": "Current turn number"
    },
    "moduleId": {
      "type": "string",
      "description": "ID of the module this encounter belongs to"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes about the encounter"
    },
    "createdAt": {
      "type": "number",
      "description": "Timestamp when the encounter was created"
    },
    "updatedAt": {
      "type": "number",
      "description": "Timestamp when the encounter was last updated"
    }
  }
} 